{
  "name": "$t:user",
  "version": "1.0.0",
  "types": ["number", "user_created", "user_updated"],
  "options": {
    "template": {
      "name": "$t:template",
      "comment": "$t:template_comment",
      "interface": "text-input",
      "default": "{{first_name}} {{last_name}}"
    },
    "display": {
      "name": "$t:display",
      "comment": "$t:display_comment",
      "interface": "dropdown",
      "default": "both",
      "options": {
        "choices": {
          "both": "$t:avatar + $t:name",
          "avatar": "$t:avatar",
          "name": "$t:name"
        }
      }
    }
  },
  "translation": {
    "en-US": {
      "user": "User",
      "avatar": "Avatar",
      "name": "Name"
    }
  }
}
